/*colores de la pagina*/
azul_claro = #01b5ff
azul_mediano = #0e56f9
azul_oscuro = #000393
rojo_carmesi = #ff4842
rojo_carmesi_oscuro = #d0272a
verde_lima = #7dcd40
verde_lima_oscuro = #6dae33
sombra_clara = #333
sombra_oscura = #222
/*fin de los colores de la pagina*/
