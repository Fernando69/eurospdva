/*----------------ESTILOS PARA LAS ETIQUETAS----------------------------*/



/*----------------FIN DE LOS ESTILOS PARA LAS ETIQUETAS----------------------------*/
body
	background-image url(../img/body.png)
	height 100%

h1,h2, h3
	font-family montserrat-bold
	font-weight normal
	line-height 80px
	margin auto
	text-align center
	text-shadow 0px 1px 4px #000
	display block
	
h1	
	color #f8feff
	font-size 3em

h2 
	color #f8feff
	font-size 3em

h3
	color #111
	font-size 5em
	margin 50px 0px 25px 25px
	padding 15px
	text-align left
	text-shadow 1px 1px 4px #000
	
html
	height 100%


/*----------------ESTILOS PARA LOS ID'S----------------------------*/

#section1 
	height 100%
	margin 0
	overflow hiddena
	padding 0
	height 100%

#section2
	background-image url(../img/body.png)
	box-shadow -4px 0px 3px #222
	margin 0
	min-height 100%
	overflow hidden
	padding 20px
	position relative
	width 100%

#slider
	border-bottom solid 8px rojo_carmesi
	border-radius 4px
	border-top solid 8px rojo_carmesi
	box-shadow 0px 0px 2px 2px #444
	margin-bottom 50px
	
#social
	background-color #0c3d7a
	background-image url(../img/diamantes.png)
	border-bottom solid 8px verde_lima
	border-radius 4px
	border-top solid 8px verde_lima
	box-shadow 0px 0px 2px 2px #444
	margin-bottom 20px
	padding 15px 10px 30px 10px

	h4
		color #fff
		font-size 2.2em
		font-weight bold
		text-align center
		text-shadow 1px 1px 4px #000
	
	img
		width 30%
		margin 15px 8%
		transition 1s ease
		
		&:hover
			transform rotate(360deg)
	
	.box-login 
		margin auto
		width 340px

	.box-social
		margin-top 20px
		
		.btn-log, .btn-sign
			border-radius 5px
			color #fff
			font-weight bold
			font-size 1.8em
			padding 8px 15px
			&:hover
				text-decoration none
				
		.btn-log
			margin-left 25px

		.btn-sign
			margin-left 15px

/*----------------FIN DE LOS ESTILOS PARA LOS ID'S----------------------------*/


/*----------------ESTILOS PARA LAS CALSES----------------------------*/
.boton-rojo
	background rojo_carmesi
	border-bottom solid 5px rojo_carmesi_oscuro
	border-radius 5px
	box-shadow 0px 0px 1px 1px rojo_carmesi_oscuro
	color #fff
	&:hover
		background verde_lima
		border-bottom solid 5px verde_lima_oscuro
		box-shadow 0px 0px 1px 1px verde_lima_oscuro
		color #fff

.boxlogo
	height 250px
	left 50%
	margin-left -365px
	margin-top -125px
	position absolute
	top 50%
	width 730px 
	
	
	.hbox
		border-right 3px solid #fff
		left 0px 
		position absolute
		text-align left
		width 520px

	.logo
		background-color #fff
		border solid 6px azul_claro
		border-radius 50%
		box-shadow 0px 0px 5px 1px #222
		height 190px
		position absolute
		right 0
		top 25px
		width 180px
		&:hover
			border solid 6px verde_lima
		img
			display block
			margin auto
			width 95%
			transition 1s ease
			&:hover
				transform rotate(360deg)


.carousel-caption
	background #444
	background-color rgba(0,0,0,0.6)
	bottom 0
	left 0
	padding-left 20px
	right 0
	text-align left
	width 100%
	
	h4
		font-size 24px
	

.item img
	height 100%
	width 100%

.glyphicon-arrow-down, .glyphicon-arrow-up
	font-size 35px
	display table
	margin auto
	text-align center
	&:hover
		text-decoration none

.glyphicon-arrow-down
		padding 12px 10px 12px 12px
		
.glyphicon-arrow-up
	padding 12px 12px 12px 10px
		
.p-btn-scroll1
	height 80px
	position absolute
	bottom 0px
	width 100%
	a
	&:hover
		text-decoration none

.p-btn-scroll2
	height 80px
	position absolute
	right 30px
	top 110px
	a
	&:hover
		text-decoration none
	
	

/*----------------FIN DE LOS ESTILOS PARA LAS CLASES----------------------------*/


	

/*----------------RESPONSIVE DESIGN----------------------------*/
@media (max-width: 1200px) and (min-width: 768px)

	h1, h2
		font-size 2.5em
		line-height 70px
	
	h3 
		font-size 4em

	#section2
		height auto

	#social
		margin 25px 15px
		
		img 
			width 15% 
			display inline
			margin 4.5%

	.boxlogo
		height 220px
		margin-left -330px
		margin-top -110px
		width 660px 
	
		.hbox
			width 480px

		.logo
			height 170px
			top 25px
			width 160px
			
	.navbar-default .navbar-nav > li > a
		padding 15px 12px
			

@media (max-width: 767px)
	h1, h2
		font-size 1.9em
		line-height 50px
	h3 
		font-size 4em
		margin 20px 0px 0px 0px

	#section2
		h3 
			font-size 3.2em

	#social
		margin 25px 15px
		padding-bottom 0px
		
		h4
			font-size 2em
			
		img 
			width 32% 
			display inline
			margin 7%
		
		.box-login 
			width 60%

		.box-social
				
			.btn-log, .btn-sign
				display block
				font-size 1.4em
				padding 6px 12px
				margin 12px auto 
				text-align center
				
	.boxlogo
		left 0
		margin 0px
		padding 0px
		position relative
		top 60px
		width 100%
	
		.hbox
			border none
			display block
			font-size 1em
			left 0
			margin-right 150px
			padding 0px
			margin 0px
			position relative
			top 0px
			width 100%
		
			h1, h2
				display block
				line-height 60px

		.logo
			display none
	
	.carousel-caption
		background #444
		background-color rgba(0,0,0,0.6)
		bottom 0
		left 0
		padding-left 20px
		right 0
		text-align left
		width 100%
		
		h4
			font-size 18px
			

	.glyphicon-arrow-down, .glyphicon-arrow-up
		font-size 25px
	
	.p-btn-scroll2
		height 80px
		position absolute
		right 30px
		top 65px
	

/*----------------FIN DEL RESPONSIVE DESIGN----------------------------*/
