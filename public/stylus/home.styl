/*DOCUMENTO CSS*/

/*--------------------------------------------*/
/*colores de la pagina*/
azul_claro = #01b5ff
azul_mediano = #0e56f9
azul_oscuro = #000393
blanco_contenido = rgba(255,255,255,0.8)
color_nav = rgb(51,51,51)
rojo_carmesi = #ff4842
rojo_carmesi_oscuro = #d0272a
verde_lima = #7dcd40
verde_lima_oscuro = #6dae33
sombra_clara = #333
sombra_oscura = #222
/*fin de los colores de la pagina*/
/*--------------------------------------------*/

@import 'nib/vendor'
vendor-prefixes = o ms moz webkit khtml official 

/*--------------------------------------------*/
/*importando fuentes*/

@font-face 
  font-family "montserrat-regular"
  font-style normal
  font-weight normal
  src url("../fonts/montserrat-regular.woff") format("woff"), url("../fonts/montserrat-regular.ttf") format("truetype"), url("../fonts/montserrat-regular.eot") format("eot"), url("../fonts/montserrat-regular.svg") format("svg")

@font-face 
  font-family "montserrat-bold"
  font-style normal
  font-weight normal
  src url("../fonts/montserrat-bold.woff") format("woff"), url("../fonts/montserrat-bold.ttf") format("truetype"), url("../fonts/montserrat-bold.eot") format("eot"), url("../fonts/montserrat-bold.svg") format("svg")

/*fin de los importes de fuentes*/
