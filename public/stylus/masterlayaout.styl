/*DOCUMENTO CSS*/

/*--------------------------------------------*/
/*colores de la pagina*/
azul_claro = #01b5ff
azul_mediano = #0e56f9
azul_oscuro = #000393
rojo_carmesi = #ff4842
rojo_carmesi_oscuro = #d0272a
verde_lima = #7dcd40
verde_lima_oscuro = #6dae33
sombra_clara = #333
sombra_oscura = #222
/*fin de los colores de la pagina*/
/*--------------------------------------------*/

@import 'nib/vendor'
vendor-prefixes = o ms moz webkit khtml official 

/*--------------------------------------------*/
/*importando fuentes*/

@font-face 
  font-family "montserrat-regular"
  font-style normal
  font-weight normal
  src url("../fonts/montserrat-regular.woff") format("woff"), url("../fonts/montserrat-regular.ttf") format("truetype"), url("../fonts/montserrat-regular.eot") format("eot"), url("../fonts/montserrat-regular.svg") format("svg")

@font-face 
  font-family "montserrat-bold"
  font-style normal
  font-weight normal
  src url("../fonts/montserrat-bold.woff") format("woff"), url("../fonts/montserrat-bold.ttf") format("truetype"), url("../fonts/montserrat-bold.eot") format("eot"), url("../fonts/montserrat-bold.svg") format("svg")

/*fin de los importes de fuentes*/
/*--------------------------------------------*/


/*----------------ESTILOS PARA LAS ETIQUETAS----------------------------*/

body
	background-image url(../img/body.png)
	font-size 15px
	
h1	
	background #e2e0e0
	border-right solid 8px verde_lima
	box-shadow 0px 0px 1px #333
	color #222
	display table
	font-family montserrat-bold
	font-size 2.5em
	margin auto
	margin-bottom 30px
	margin-top 20px
	padding 6px 10px
	text-align center

h2
	background #e2e0e0
	border-left solid 8px azul_claro
	box-shadow 0px 0px 1px #333
	color #222
	display table
	font-family montserrat-bold
	font-size 2em
	margin-bottom 20px
	padding 6px 10px

footer
	background-color #333
	border-top solid 8px azul_claro
	box-shadow 0px -1px 5px sombra_clara
	font-family montserrat-regular
	font-size 15px
	margin-top 90px
	width 100%
	
	p 
		font-size 16px
	
	.comunidad
		margin auto
		margin-bottom 30px
		margin-top 100px
		max-width 440px
		width 85%
	
		div
			border-radius 2px
			box-shadow 0px 0px 2px 2px #222
			display inline-block
			font-family montserrat-regular
			margin 0px 5px
			opacity 0.8
			text-align center
			&:hover
				opacity 1
			
			a:hover 
				text-decoration none

			p
				color #fff
				padding-left 10px
				padding-right 10px
				padding-top 10px
				text-shadow 1px 1px 2px #222
			
		h4	
			font-size 25px
			color #fff
			text-align center
			text-shadow 1px 1px 2px #222
		
		.avec
			background azul_claro
			border solid 4px azul_mediano
		
		.epa
			background #ffef3d
			border solid 4px #b4a60d

		.lamigal
			background verde_lima
			border solid 4px verde_lima_oscuro
			
		.me
			background rojo_carmesi
			border solid 4px rojo_carmesi_oscuro
			
		.siragon
			background #ec7603
			border solid 4px #af5905

	.derechos
		border-top solid 5px rojo_carmesi_oscuro
		color #fff
		margin auto
		margin-bottom 10px
		max-width 1200px
		padding 5px
		width 85%
		p
			text-shadow 1px 1px 2px #222

	.logo
		background-color #fff
		border solid 6px azul_claro
		border-radius 50%
		box-shadow 0px 0px 5px 1px #222
		height 165px
		margin-right -90px
		position absolute
		right 50%
		top -82px
		width 160px
		img
			display block
			margin auto
			width 95%
			transition 1s ease
			&:hover
				transform rotate(360deg)

header
	border solid 8px azul_claro
	box-shadow 0px 0px 2px #000
	margin 80px 0px 30px 0px

/*----------------FIN DE LOS ESTILOS PARA LAS ETIQUETAS----------------------------*/


/*----------------ESTILOS PARA LOS ID'S----------------------------*/

#slider
	height 300px
	margin 0px
	padding 0px
	
	img
		height 300px
		width 100%
			
/*----------------FIN DE LOS ESTILOS PARA LOS ID'S----------------------------*/


/*----------------ESTILOS PARA LAS CALSES----------------------------*/
.boton-rojo
	background rojo_carmesi
	border-bottom solid 5px rojo_carmesi_oscuro
	border-radius 5px
	box-shadow 0px 0px 1px 1px rojo_carmesi_oscuro
	color #fff
	&:hover
		background verde_lima
		border-bottom solid 5px verde_lima_oscuro
		box-shadow 0px 0px 1px 1px verde_lima_oscuro
		color #fff

.col-lg-10, .col-xs-12
	padding 0px
	

.form-contacto
	display inline-block
	margin 0px 30px 20px 0px
	width 45%
	input
		margin-bottom 10px
		
	input, textarea, select
		display block
		padding 10px
		width 98%
	
	label
		font-family montserrat-regular
		font-size 20px
		margin-top 20px
	
	textarea
		font-size 20px
		margin-bottom 20px

input[value = "Enviar"]
	background-color rojo_carmesi
	border none
	border-bottom solid 5px rojo_carmesi_oscuro
	border-radius 5px
	color #fff
	font-family montserrat-regular
	font-size 25px
	padding 6px 0px
	&:hover 
		background-color verde_lima 
		border-bottom solid 5px verde_lima_oscuro

.googlemaps
	border solid 2px verde_lima
	box-shadow 0px 0px 8px 1px #444
	display inline-block
	height 630px 
	margin-top 10px
	width 50%
	iframe
		height 100%
		width 100%

.input-group-btn, .form-control
	display inline

.icono 
	background rojo_carmesi
	border solid #fff 8px
	border-radius 50%
	color #fff
	font-size 30px 
	height 80px
	left 50%
	margin-left -40px
	padding 8px 
	position absolute 
	text-align center 
	text-shadow 1px 1px 1px #666
	top -40px 
	width 80px
	p 
		margin-top 8px

.item img
	height 100%
	width 100%

.new
	background #eee
	box-shadow 1px 1px 5px #333
	display inline-block
	margin 20px auto
	transition: all 0.5s ease-in-out;
	vertical-align top
	width 29%
	&:hover
		transform scale(1.1)
	
	a
		text-decoration none
	
	h2
		background none
		border-bottom solid 1px #777
		border-left 0px
		box-shadow none
		color #444
		font-family montserrat-regular
		font-size 25px
		line-height 28px
		margin 0px
		padding 12px 0px 15px 0px
		text-align left
		
	img
		height 200px
		width 100%
		
	p 
		color #777
		font-family montserrat-regular
		margin 5px auto 
		padding-left 5px
		width 100%
		

.section1
	background-color #fff
	border-top solid 60px rojo_carmesi
	border-radius 5px
	box-shadow 0px 0px 2px #000
	margin-left 1.5%
	margin-right 30px
	padding 30px
	padding-top 40px
	text-align justify
	
	#links
		img
			margin-bottom 10px
	
	.imgarticle
		border solid 5px azul_claro
		box-shadow 0px 0px 8px 1px #444
		display block
		margin 20px auto
		width 60%
	
.section2 .col-lg-10, .col-xs-12
	padding 0px
	
.sectionbox
	background-color #fff
	border-radius 5px
	box-shadow 0px 0px 2px #000
	margin 0px
	margin-bottom 20px
	padding 0px
	
	h4
		background-color verde_lima
		color #fff
		font-family montserrat-bold
		font-size 25px
		margin 0px 0px 22px 0px
		padding-bottom 8px 
		padding-left 40px
		padding-top 8px
		text-align left
		text-shadow 1px 1px 1px #666
		width 100%
		
		&:before
			content '' 
			display block
			border-color verde_lima transparent transparent transparent
			border-style solid
			border-width 18px
			position absolute
			top 42px
			left 50%
			margin-left -10px
	p
		padding 0px 10px 0px 10px
	
	span
		color #fff
		font-size 25px
		left 10px
		position absolute
		top 8px
	
	.postnews
		background azul_claro
		border solid 4px azul_mediano
		border-radius 4px 
		box-shadow 1px 1px 2px #333
		color white
		display block
		font-family montserrat-regular
		font-size 18px
		margin 10px auto
		opacity 0.9
		padding 5px 8px
		text-align center
		text-decoration none
		width 90%
		&:hover
			opacity 1

	.twitter 
		background-color #55acee
		&:before
			border-color #55acee transparent transparent transparent

.wapper
	margin-top 0px

.wapper-log
	background #fff
	border solid 2px verde_lima_oscuro
	border-radius 5px
	box-shadow 0px 0px 5px #333
	display block
	left 50%
	margin-bottom 30px
	margin-left -250px
	position absolute
	top 100px
	width 500px
	
	h1
		background verde_lima
		color #fff
		display block
		margin auto
		padding 10px 0px
	
	form
		display block
		margin auto
		width 95%

		a 
			font-family montserrat-regular
			font-size 18px
			margin-left 20px
			
		
		input, select
			margin-bottom 10px
			display block
			padding 10px
			width 98%

		label 
			display inline-block
			font-family montserrat-regular
			font-size 20px
			margin-top 20px
			
		select 
			font-family montserrat-regular
			font-size 18px
			height 50px
			margin-bottom 30px
		
		#remember
			display inline-block
			margin-bottom 30px
			margin-left 5px
			width auto
		
		.label-danger
			display table
			font-size 18px
			margin auto
		
	
	p
		font-family montserrat-regular
		font-size 20px
		margin-top 25px
		text-align center


/*----------------FIN DE LOS ESTILOS PARA LAS CLASES----------------------------*/


/*----------------RESPONSIVE DESIGN----------------------------*/
@media (min-width: 1201px)
	
	.col-sm-5
		margin-left 0px

	.section2
		width 29%

	.sectionbox
		margin-left 0px

@media (max-width: 1200px) and (min-width: 768px)
		
	header
		margin 80px auto 30px auto
		width 90%

	.col-sm-5
		&:nth-child(odd)
			margin-left 5%
			
		&:nth-child(even)
			margin-left 5%
			
		&:nth-child(1), &:nth-child(2)
			height 160px
			
		&:nth-child(3), &:nth-child(4)
			height 300px
	
	.form-contacto
		display block
		margin auto
		width 70%

	.googlemaps
		display block
		height 400px
		width 100%
		
	.twitter-timeline
		height 200px
		
	.section1
		margin-right 30px
		margin-bottom 30px
		

@media (max-width: 767px)

	h1
		margin-top 50px

	header
		margin 80px auto 30px auto
		width 92%
	
		
	#slider
		height 180px
		margin 0px
		padding 0px
		
		img
			height 180px
			width 100%

	.col-xs-12
		padding 0px
		margin-left 0px
	
	.comunidad
		margin auto
		margin-bottom 10px
		margin-top 100px
		max-width 600px
		width 100%
	
		div
			display block
			margin auto
			opacity 1

			p
				margin 0px
				padding 0px
				padding-bottom 5px
			
		h4	
			font-size 25px
			color #fff
			text-align center
			text-shadow 1px 1px 2px #222
		
		.avec, .epa, .lamigal, .me, .siragon
			margin 5px

	.derechos
		text-align center
		width 100%

	.form-contacto
		display block
		width 100%

	.googlemaps
		display block
		height 300px
		width 100%

	.logo
		border solid 4px azul_claro
		height 135px
		margin-right -90px
		position absolute
		right 50%
		top -65px
		width 130px
		img:hover
			transform rotate(360deg)
	
	.new
		display block
		width 95%
		transition none
		&:hover
			transform none
	
	.section1
		margin auto
		margin-bottom 30px
		padding 15px
		width 100%
		
		
		#links
			img
				margin 4px
				width 25%
		
		.imgarticle
			border solid 3px azul_claro
			box-shadow 0px 0px 5px 2px #444
			display block
			margin 20px auto
			width 90%

	.section2
		margin-bottom 30px
		.sectionbox
			margin 30px auto
			width 95%	
			h4
				font-size 22px
				&:before
					top 40px
	
	.wapper
		margin-top 0px
	
	.wapper-log 
		left 2.5%
		margin auto
		margin-bottom 20px
		width 95%
		
		a 
			display block
			margin-bottom 10px
			margin-left 0px
			text-align center

		h1
			line-height 50px
		


/*----------------FIN DEL RESPONSIVE DESIGN----------------------------*/
